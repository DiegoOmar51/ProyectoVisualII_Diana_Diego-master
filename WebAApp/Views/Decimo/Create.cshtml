@using Modelo.Entidades

@model Decimo_Tercero
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Creacion de Decimos</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Nuevo Decimo
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Create" method="post">
                <div class="form-group">
                    <label class="custom-control-label">Fecha Inicio: </label>
                    <input class="form-control" type="date" asp-for="fecha_inicio" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Fecha Final: </label>
                    <input class="form-control" type="date" asp-for="fecha_final" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Mes: </label>
                    <input class="form-control" type="text" asp-for="meses" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Total: </label>
                    <input class="form-control" maxlength="10" type="text" asp-for="total" />
                </div>
               
                <div class="form-group">
                    <label class="custom-control-label">Empleado: </label>
                    <select class="form-control"
                            asp-for="PersonalId" asp-items="@ViewBag.selectListEmpleados">
                        <option value="">--Seleccione un empleado---</option>
                    </select>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Crear Decimo" />
                </div>
            </form>
        </div>
    </div>

</div>
