@using Modelo.Entidades

@model Roles
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edicion de Rol</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Editar Rol
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Edit" method="post">
                <input type="text" asp-for="RolesId" hidden />

                <div class="form-group">
                    <label class="custom-control-label">Comision: </label>
                    <input class="form-control" type="text" asp-for="comision" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Aportes Iess: </label>
                    <input class="form-control" type="text" asp-for="aporte_iess" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Anticipos de la Empresa: </label>
                    <input class="form-control" type="text" asp-for="anticipo" />
                </div>
                 <div class="form-group">
                    <label class="custom-control-label">Total: </label>
                    <input class="form-control" type="text" asp-for="total" />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Empleado: </label>
                    <select class="form-control"
                            asp-for="PersonalId" asp-items="@ViewBag.selectListEmpleados">
                        <option value="">--Seleccione un empleado---</option>
                    </select>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Actualizar Rol" />
                </div>
            </form>
        </div>
    </div>

</div>