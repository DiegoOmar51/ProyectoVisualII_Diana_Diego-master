@using Modelo.Entidades

@model Roles
@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Eliminar de Rol</h1>

<div class="container">
    <div class="row">
        <div class="col-sm-12">
            <h3>
                Eliminar Rol
            </h3>
        </div>
    </div>
    <div class="row">
        <div class="col-sm-10">
            <form asp-action="Delete" method="post">
                <input type="text" asp-for="RolesId" hidden />

                <div class="form-group">
                    <label class="custom-control-label">Comisiones: </label>
                    <input class="form-control" type="text" asp-for="comision" disabled />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Aportes Iess: </label>
                    <input class="form-control" type="text" asp-for="aporte_iess" disabled />
                </div>
                <div class="form-group">
                    <label class="custom-control-label">Anticipo de la Empresa: </label>
                    <input class="form-control" type="text" asp-for="anticipo" disabled />
                </div>
                 <div class="form-group">
                    <label class="custom-control-label">Total: </label>
                    <input class="form-control" maxlength="10" type="text" asp-for="total" />
                </div>
         
                <div class="form-group">
                    <label class="custom-control-label">Empleado: </label>
                    <select class="form-control"
                            asp-for="PersonalId" asp-items="@ViewBag.selectListEmpleados" disabled>
                        <option value="">--Seleccione un empleado---</option>
                    </select>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary" type="submit" value="Eliminar Rol" />
                </div>
            </form>
        </div>
    </div>

</div>