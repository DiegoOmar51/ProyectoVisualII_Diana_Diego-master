@using Modelo.Entidades;

@model IEnumerable<Empresa>


@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<h1>Lista de Empresas</h1>
<p>A continuación se presenta la lista de Empresas</p>

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h3>Empresas</h3>
        </div>
        <div class="col-sm-6">
            <a asp-controller="Empresa" asp-action="Create" class="btn btn-success d-block">Agregar nueva Empresa</a>
        </div>
    </div>
    @if (TempData["mensaje"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["mensaje"]
            <button type="button" class="close" data-dismiss="alert" aria-label="close">
                <span aria-hidden="true">
                    &times;
                </span>
            </button>
        </div>
    }

    <div class="row">

        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <td>Id</td>
                    <td>Empleado</td>
                    <td>Ruc</td>
                    <td>Nombre Empresa</td>
                    <td>Direccion</td>
                    <td>Telefono </td>
                    <td>Provincia</td>
                    <td>Acciones</td>
                </tr>
            </thead>
            <tbody>
                @foreach (Empresa biometrico in Model)
                {
                <tr>
                    <td>@biometrico.EmpresaId</td>
                    <td>@biometrico.Personal.Nombre</td>
                     <td>@biometrico.ruc</td>
                     <td>@biometrico.nombreEmpresa</td>
                   
                    <td>@biometrico.direccion</td>
                    <td>@biometrico.telefono</td>
                    <td>@biometrico.provincia</td>
                 <td>
                        <a asp-controller="Empresa" asp-action="Edit" asp-route-id="@biometrico.EmpresaId" class="btn btn-primary">Editar</a>
                        <a asp-controller="Empresa" asp-action="Delete" asp-route-id="@biometrico.EmpresaId" class="btn btn-danger">Eliminar</a>
                    </td>
                </tr>
                }

            </tbody>
        </table>

    </div>

</div>